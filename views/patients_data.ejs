<!DOCTYPE html>
<html>
  <head>
    <title>My Application</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready( function () {
            $('#myTable').DataTable();
        } );
    </script>
    
  </head>
  <body>
    <div class="container">
      <div class="col-md-6 col-md-offset=-3">
        <table id="myTable" class="table table-striped table-bordered" style="table-layout: fixed;word-wrap: break-word;">
            <thead>
                <tr>
                    <td class="center-align">Id</td>
                    <td class="center-align">Full Name</td>
                    <td class="center-align">Age</td>
                    <td class="center-align">DOB</td>
                    <td class="center-align">Phone Number</td>
                    <td class="center-align">Gender</td>
                    <td class="center-align">Text</td>
                </tr>
            </thead>
            <% data.forEach(function(patient) { %>
            <tr>
                <td><%= patient.id %></td>
                <td><%= patient.first_name + ' ' + patient.last_name %></td>
                <td><%= patient.age %></td>
                <td><%= patient.dob %></td>
                <td><%= patient.phone %></td>
                <td><%= patient.gender %></td>
                <td><%= patient.text %></td> 
            </tr>
            <% }); %> 
            <tbody>
            </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
